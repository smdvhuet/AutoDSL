		registerGenModelFile = "platform:/resource/info.scce.testdsl/src/info/scce/testdsl/AutoDSL.genmodel"
	}
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "info.scce.testdsl"
				rootPath = rootPath
				runtimeTest = {
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "UTF-8"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "info.scce.testdsl.TestDSL"
			fileExtensions = "test"

			serializer = {
				generateStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
			//referencedResource = "platform:/resource/info.scce.cinco.product.autoDSL/src-gen/model/SharedMemory.genmodel"
			referencedResource = "platform:/resource/info.scce.testdsl/src/info/scce/testdsl/SharedMemory.genmodel"
			referencedResource = "platform:/resource/info.scce.testdsl/src/info/scce/testdsl/AutoDSL.genmodel"
			//fragment = scoping.ImportURIScopingFragment auto-inject {} 
			//fragment = exporting.SimpleNamesFragment auto-inject {} 
			
		}
