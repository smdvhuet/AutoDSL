module info.scce.testdsl.GenerateTestDSL

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*
import org.eclipse.emf.mwe.utils.*
import org.eclipse.xtext.generator.*
import org.eclipse.xtext.ui.generator.*

var rootPath = ".."

Workflow {

	bean = StandaloneSetup {
		scanClassPath = true
		registerGeneratedEPackage = "info.scce.cinco.product.autoDSL.sharedMemory.sharedmemory.SharedmemoryPackage"
		registerGenModelFile = "platform:/resource/info.scce.testdsl/src/info/scce/testdsl/SharedMemory.genmodel"
